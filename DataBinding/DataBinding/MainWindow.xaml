<Window x:Class="DataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBinding"
        mc:Ignorable="d"
        Title="DataBinding" Height="264" Width="324">
    <Grid HorizontalAlignment="Center" Width="324">
        <Label Content="Name" HorizontalAlignment="Left" Margin="51,51,0,0" VerticalAlignment="Top" Height="28" Width="90"/>
        <Label Content="Age" HorizontalAlignment="Left" Margin="51,96,0,0" VerticalAlignment="Top" Height="28" Width="90"/>
        <TextBox HorizontalAlignment="Left" Margin="115,45,0,0" TextWrapping="Wrap" Text="{Binding Name, Mode=TwoWay}" VerticalAlignment="Top" Width="171" Height="40"/>
        <TextBox HorizontalAlignment="Left" Margin="115,96,0,0" TextWrapping="Wrap" Text="{Binding Age, Mode=TwoWay }" VerticalAlignment="Top" Width="171" Height="40"/>
        <Button Content="Info" HorizontalAlignment="Left" Margin="56,148,0,0" VerticalAlignment="Top" Width="230" Height="46" Click="Button_Click"/>

    </Grid>
</Window>
